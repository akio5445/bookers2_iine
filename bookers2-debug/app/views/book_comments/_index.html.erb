<% book_comments.each do |book_comment| %>
  <% unless book_comment.id.nil? %>
    <p><%= link_to "@#{book_comment.user.name}さん", user_path(book_comment.user.id) %></p>
    <p>comment: <%= book_comment.content %></p>
    <% if book_comment.user == current_user %>
      <p><%= link_to 'Delete', book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true %></p>
    <% end %>
  <% end %>
<% end %>