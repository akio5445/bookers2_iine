<div class="container">
	<div class="row">

		<div class="col-xs-3">
			<h2>User info</h2>
			<table class="table">
				<tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
				<tr>
					<th>name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= @user.introduction %></th>
				</tr>
				</table>
				<% if current_user == @user %> 
					<div class="row">
						<%= link_to '', edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
					</div>
				<% end %>

				<% if @user.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@user.errors.count, "error") %>error</h2>
						<ul>
						<% @user.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>
			<h2>New book</h2>

			<%= form_with(model: @book, local: true) do |f| %>

				<% if @book.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@book.errors.count, "error") %> error</h2>
						<ul>
						<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>

				<div class="row">
					<div class="">
						<%= f.label :title %>
						<%= f.text_field :title, class: "col-xs-12" %>
					</div>
					<div class="">
						<%= f.label :body %> <!-- ここを変更 -->
						<%= f.text_area :body, class: "col-xs-12" %>
					</div>
					<div class="actions">
						<%= f.submit class: "btn btn-primary col-xs-12" %>
					</div>
				</div>
			<% end %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @user.books.each do |book| %>
						<tr>
							<td>
								<%= link_to (book.user) do %>
									<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
								<% end %>
							</td>
							<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>

	</div>
</div>